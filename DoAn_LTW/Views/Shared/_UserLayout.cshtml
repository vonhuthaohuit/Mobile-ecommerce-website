
@{
    ViewBag.Title = "_MainLayout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sugong's Phone Shop</title>
    <link href="~/Content/image/Logo_SuGong.jpg" rel="icon" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        .navbar-nav .nav-item .nav-link:hover {
            color: #ff5722;
        }

        .nav-link {
            color: black;
        }

        .d-none .d-sm-inline {
            color: orange;
        }

        .d-block {
            width: 668px;
            height: 488px;
        }

        .float-right {
            width: 368px;
            height: 488px;
        }

        .col-auto .col-md-5 .col-xl-2 .px-sm-2 .px-0 .bg-light {
            float: left;
        }

        .img-top-header {
            width: 100%;
        }

        .hien-thi-ten {
            display: none;
        }

        .dang-nhap {
            display: block;
        }

        @@media (max-width: 768px) {
            .container-lg {
                padding-left: 0;
                padding-right: 0;
            }
        }
    </style>
</head>
<body>

    <div class="container-lg">
        <header>
            <div class="banner-top-header">
                <img class="img-fluid img-top-header" src="~/Content/image/banner.png" alt="Banner-Header" />
            </div>
            <nav class="navbar navbar-expand-lg bg-body-tertiary" style="padding-top: 15px; padding-bottom: 15px;">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                        <a class="navbar-brand" href="/Product/Index">Logo Shop</a>
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/Product/Index">Trang chủ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Giới thiệu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Sản phẩm</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Kinh nghiệm hay</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("DonMua", "DonMua")">Đơn Mua</a>
                            </li>
                        </ul>
                        @Html.Partial("_SearchBarPartial")
                        <ul class="navbar-nav ml-0">
                            <li class="nav-item dang-nhap">
                                <a class="nav-link" href="/Login/DangNhap">Đăng nhập</a>
                            </li>
                            <li class="nav-item hien-thi-ten">
                                <a class="nav-link" href="@Url.Action("Profile", "Login")">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512">
                                        <!--! Font Awesome Free 6.4.2 by - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                                        <path d="M304 128a80 80 0 1 0 -160 0 80 80 0 1 0 160 0zM96 128a128 128 0 1 1 256 0A128 128 0 1 1 96 128zM49.3 464H398.7c-8.9-63.3-63.3-112-129-112H178.3c-65.7 0-120.1 48.7-129 112zM0 482.3C0 383.8 79.8 304 178.3 304h91.4C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7H29.7C13.3 512 0 498.7 0 482.3z" />
                                    </svg>@ViewBag.TenKhachHang
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/GioHang/Index">Giỏ hàng</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main>
            @RenderBody()
        </main>

        <footer>
            <hr class="border-bottom border-2 border-dark mt-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <i class="bi bi-facebook"></i>
                        <h4>Kết nối với chúng tôi</h4>
                        <a href="https://www.facebook.com/your-facebook-page">Facebook</a>
                    </div>
                    <div class="col-md-3">
                        <i class="bi bi-telephone"></i>
                        <h4>Hotline</h4>
                        <p>Số điện thoại: 0123456789</p>
                    </div>
                    <div class="col-md-3">
                        <i class="bi bi-truck"></i>
                        <h4>Ship hàng COD</h4>
                        <p>Thu tiền tận nơi</p>
                    </div>
                    <div class="col-md-3">
                        <i class="bi bi-credit-card"></i>
                        <h4>Thông tin giao hàng</h4>
                        <p>Miễn phí thanh toán</p>
                    </div>
                </div>
            </div>
            <hr class="border-bottom border-2 border-dark mt-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <h6>HỆ THỐNG MONA MEDIA</h6>
                        <p>Chính sách & Quy định chung</p>
                        <p>Chính sách đổi trả sản phẩm</p>
                        <p>Chính sách bảo hành</p>
                        <p>Chính sách giao hàng</p>
                    </div>
                    <div class="col-md-2">
                        <h6>TRỢ KHÁCH HÀNG</h6>
                        <p>Giới thiệu</p>
                        <p>Tin tức</p>
                        <p>Tin khuyến mãi</p>
                        <p>Tuyển dụng</p>
                    </div>
                    <div class="col-md-3">
                        <h6>HỖ TRỢ KHÁCH HÀNG</h6>
                        <p>Hỗ trợ mua hàng trực tuyến</p>
                        <p>Các hình thức thanh toán</p>
                        <p>Hướng dẫn mua hàng trực tuyến</p>
                        <p>Phát hành hóa đơn</p>
                    </div>
                    <div class="col-md-2">
                        <h6>CHẤP NHẬN THANH TOÁN</h6>
                        <img src="~/assets/img/visa.jpg" />
                    </div>
                    <div class="col-md-2">
                        <h6>KẾT NỐI VỚI MEDIA</h6>
                        <a href="#" class="nav-link px-0"> <span class="d-none d-sm-inline">Sốp online</span></a>
                    </div>
                </div>
            </div>
            <hr class="border-bottom border-2 border-dark mt-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <p>CÔNG TY TNHH MEDIA - MST : 012345678 DO SỞ KHĐT TPHCM CẤP NGÀY 00/00/2023</p>
                        <p>ĐỊA CHỈ : 140 Lê Trọng Tấn, phường Tây Thạnh, TP.HCM</p>
                        <p>HOTLINE : 0123456789 - EMAIL : sop@sop.media</p>
                    </div>
                    <div class="col-md-4">
                        <img src="~/assets/img/BCT.jpg" />
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script>
            kiemTraDangNhap('@ViewBag.MaKH');
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>