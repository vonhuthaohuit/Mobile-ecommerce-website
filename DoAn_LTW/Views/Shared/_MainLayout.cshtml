
@{
    ViewBag.Title = "_MainLayout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sugong's Store</title>
    <link href="~/Content/image/Logo_SuGong.jpg" rel="icon" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        .navbar-nav .nav-item .nav-link:hover {
            color: #ff5722;
        }

        .nav-link {
            color: black;
        }

        .d-none .d-sm-inline {
            color: orange;
        }

        .d-block {
            width: 668px;
            height: 488px;
        }

        .float-right {
            width: 368px;
            height: 488px;
        }

        .col-auto .col-md-5 .col-xl-2 .px-sm-2 .px-0 .bg-light {
            float: left;
        }

        .img-top-header {
            width: 100%;
        }

        .control-right img {
            height: 365px;
        }

        .header-content {
            height: 370px;
        }

        .hien-thi-ten {
            display: none;
        }

        @@media (max-width: 768px) {
            .control-left {
                display: none;
            }

            .control-right {
                width: 100%;
            }

                .control-right img {
                    height: 150px;
                }

            .header-content {
                height: 155px;
            }

            .container-lg {
                padding-left: 0;
                padding-right: 0;
            }
        }
    </style>
    <script>
        function kiemTraDangNhap(maKh) {
            const tendangnhap = document.querySelector('.hien-thi-ten');
            const dangnhap = document.querySelector('.dang-nhap');
            if (maKh == '') {
                tendangnhap.style.display = 'none';
                dangnhap.style.display = 'block';
            }
            else {
                tendangnhap.style.display = 'block';
                dangnhap.style.display = 'none';
            }
            console.log(maKh)
        }
    </script>
</head>
<body>
