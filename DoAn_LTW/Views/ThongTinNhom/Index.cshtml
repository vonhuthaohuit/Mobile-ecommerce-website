
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông Tin Nhóm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>
<body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <h2>Thông tin nhóm</h2>
    <p>
        <input type="button" id="Get" value="Thông Tin Nhóm" />
    </p>


    <table class="table table-condensed" id="ThongTin" style="display: none">
    </table>
    



    <script>
        $(document).ready(function () {
            $("#Get").click(function () {
                $("#ThongTin").show();
                $("#ThongTin").empty();
                $.ajax({
                    url: 'https://localhost:44332',
                    dataType: "json",
                    success: function (data) {
                        var row = "<tr><td>MSSV</td><td>Họ Và Tên</td><td>Nhiệm Vụ</td><td>Đánh Giá</td></tr>";
                        for (var i = 0; i < data.length; i++) {
                            row += "<tr>";
                            row += "<td>" + data[i].MSSV + "</td>";
                            row += "<td>" + data[i].hoTen + "</td>";
                            row += "<td>" + data[i].nhiemVu + "</td>";
                            row += "<td>" + data[i].danhGia + "</td>";
                            row += "</tr>";
                        }
                        $("#ThongTin").append(row);
                    },
                    error: function (xhr) {
                        alert("No data");
                    }
                });
            });
        })
    </script>
</body>

</html>
