@model DoAn_LTW.Models.CHITIETSANPHAM

@{
    ViewBag.Title = "Thêm Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    @Html.ActionLink("Trang Chủ", "Main_Page", "Provider")
                </li>
                <li class="breadcrumb-item">Danh Sách Sản Phẩm</li>
                <li class="breadcrumb-item">Thêm Mới Sản Phẩm</li>
            </ol>
        </nav>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-6">
                @using (Html.BeginForm("Create_San_Pham", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="card">
                        <div class="card-body">
                            <form>
                                <br />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ID)
                                <div class="row mb-3">

                                    <label class="control-label col-md-2">Mã Chi Tiết Sản Phẩm</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.MACHITIETSANPHAM, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MACHITIETSANPHAM, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="control-label col-md-2">Mã Loại</label>
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.MALOAI, (SelectList)ViewBag.MALOAIList, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MALOAI, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="control-label col-md-2">Tên Sản Phẩm</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TENSANPHAM, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TENSANPHAM, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="control-label col-md-2">Giá</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.GIA, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.GIA, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="control-label col-md-2">Màu Sắc</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.MAUSAC, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MAUSAC, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="control-label col-md-2">Mô Tả Sản Phẩm</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.MOTASANPHAM, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MOTASANPHAM, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="control-label col-md-2">Hình Ảnh</label>
                                    <div class="col-md-10">
                                        <input type="file" name="HinhAnhFile" id="HinhAnhFile" />
                                        @Html.ValidationMessageFor(model => model.HINHANH, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label class="control-label col-md-2">Mã Nhà Cung Cấp</label>
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.MALOAI, (SelectList)ViewBag.MANCCList, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MANCC, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" value="Create" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</main>