@model IEnumerable<DoAn_LTW.Models.CHITIETSANPHAM>

@{
    ViewBag.Title = "Danh Sách Loại Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Danh Sách Sản Phẩm</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    @Html.ActionLink("Trang Chủ", "Main_Page", "Provider")
                </li>
                <li class="breadcrumb-item">Danh Sách Sản Phẩm</li>
                <li class="breadcrumb-item active">Thông Tin Các Sản Phẩm</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title" Sản Phẩm</h5>
                        <p>
                            @Html.ActionLink("Thêm Mới", "Create_San_Pham", "Product", new { }, new { @class = "btn btn-primary" })
                        </p>
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>
                                        <label class="control-label col-md-6">Mã Chi Tiết Sản Phẩm</label>
                                    </th>
                                    <th>
                                        <label class="control-label col-md-4">Tên Sản Phẩm</label>
                                    </th>
                                    <th>
                                        <label class="control-label col-md-5">Giá</label>
                                    </th>
                                    <th>
                                        <label class="control-label col-md-6">Màu Sắc</label>
                                    </th>
                                    <th>
                                        <label class="control-label col-md-8">Hình Ảnh</label>
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MACHITIETSANPHAM)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TENSANPHAM)
                                        </td>
                                        <td>
                                            @{
                                                string giaFormatted = string.Format("{0:N0}", item.GIA);
                                                string[] parts = giaFormatted.Split(',');
                                                string result = string.Join(".", parts);
                                            }
                                            @Html.Raw(result) VNĐ
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MAUSAC)
                                        </td>
                                        <td>
                                            <img src="~/assets/img/@item.HINHANH" alt="Product Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                        </td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Update_San_Pham", "Product", new { id = item.ID }, new { @class = "btn btn-primary" }) |
                                            @Html.ActionLink("Xóa", "Delete_San_Pham", "Product", new { id = item.ID }, new { @class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
